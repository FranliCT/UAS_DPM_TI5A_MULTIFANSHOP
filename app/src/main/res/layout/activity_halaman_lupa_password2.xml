<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#91E7DC"
    tools:context=".MainActivity">

    <TextView
        android:id="@+id/textView"
        android:layout_width="match_parent"
        android:layout_height="44dp"
        android:gravity="center"
        android:text="Forgot Password"
        android:textColor="#000000"

        android:textSize="17sp" />

    <ImageView
        android:id="@+id/imageView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="12dp"
        android:layout_marginLeft="30dp"
        android:layout_marginTop="9dp"
        android:layout_marginEnd="12dp"
        android:layout_marginBottom="12dp"
        app:srcCompat="@drawable/ic_baseline_keyboard_backspace_24" />

    <ImageView
        android:id="@+id/imageView2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="330dp"
        android:layout_marginTop="9dp"
        app:srcCompat="@drawable/ic_baseline_close_24" />

    <ImageView
        android:id="@+id/imageView3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="110dp"
        android:layout_marginLeft="190dp"
        app:srcCompat="@drawable/ic_baseline_lock_24" />

    <LinearLayout
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_marginLeft="130dp"
        android:layout_marginTop="70dp"
        android:background="@drawable/ellips">

        <ImageView
            android:id="@+id/imageView4"
            android:layout_width="80sp"
            android:layout_height="110sp"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="-5dp"
            app:srcCompat="@drawable/ic_baseline_lock_open_24" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="596dp"
        android:layout_alignParentBottom="true"
        android:layout_marginTop="219dp"
        android:layout_marginBottom="20dp"
        android:background="@drawable/custom_rectangle"
        android:orientation="vertical">

        <TextView
            android:id="@+id/textView7"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text=" Atur Kata Sandi"
            android:textColor="#000000"
            android:textSize="28sp" />


        <EditText
            android:id="@+id/editTextTextPersonName"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/stroke"
            android:drawableRight="@drawable/ic_baseline_remove_red_eye_24"
            android:ems="10"
            android:hint="Silahkan Maukkan Kata Sandi Baru"
            android:inputType="textPersonName"
            android:padding="20dp"
            android:textColor="#000000"
            android:textColorHint="#C4C4C4"
            android:textSize="13sp" />

        <EditText
            android:id="@+id/editTextTextPersonName3"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:background="@drawable/stroke"
            android:drawableRight="@drawable/ic_baseline_remove_red_eye_24"
            android:ems="10"
            android:hint="Silahkan Masukkan Ulang Kata Sandi"
            android:inputType="textPersonName"
            android:padding="20dp"
            android:textColor="#000000"
            android:textColorHint="#C4C4C4"
            android:textSize="13sp" />

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="100dp">

            <TextView
                android:id="@+id/textView2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="10dp"
                android:layout_marginTop="9dp"
                android:layout_marginEnd="10dp"
                android:layout_marginBottom="10dp"
                android:text="Harus memuat :"
                android:textColor="#C4C4C4"
                android:textSize="14sp" />

            <TextView
                android:id="@+id/textView4"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="45dp"
                android:padding="2dp"
                android:text="> Huruf besar dan kecil"
                android:textColor="#C4C4C4"
                android:textSize="12sp" />

            <TextView
                android:id="@+id/textView3"
                android:layout_width="150dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="25dp"
                android:padding="2dp"
                android:text="> Angka"
                android:textColor="#C4C4C4"
                android:textSize="12sp" />

            <TextView
                android:id="@+id/textView6"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="200dp"
                android:layout_marginTop="24dp"
                android:padding="2sp"
                android:text="> 8-16 karakter"
                android:textColor="#C4C4C4" />

            <TextView
                android:id="@+id/textView9"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="200dp"
                android:layout_marginTop="45dp"
                android:padding="2sp"
                android:text="> Karakter spesial"
                android:textColor="#C4C4C4" />
        </RelativeLayout>

        <Button
            android:id="@+id/button7"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:backgroundTint="#000000"
            android:text="Verifikasi"
            android:textColor="#FFFFFF"
            android:textSize="10sp" />
    </LinearLayout>

</RelativeLayout>
